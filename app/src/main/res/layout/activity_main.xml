<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/secondtv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textSize="20sp"
        tools:ignore="RtlCompat"
        android:background="@color/lightblack"
        />
    <TextView
        android:id="@+id/firsttv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:background="@color/lightblack"
        android:textAlignment="viewEnd"
        android:textSize="40sp"
        tools:ignore="RtlCompat"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/firsttv"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:background="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7"
            android:background="@color/gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_ac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="AC"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

                <Button
                    android:id="@+id/button_c"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="C"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/firstbrac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="("
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/lastbrac"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text=")"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_sin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="sin"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

                <Button
                    android:id="@+id/button_cos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="cos"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_tan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="tan"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_log"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="log"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_ln"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="ln"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_xfacto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="x!"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

                <Button
                    android:id="@+id/button_xsqrt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="x^2"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_root"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="√"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_1ux"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="1/x"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_devide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="/"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="7"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="8"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="9"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_mul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="*"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="4"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="5"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="6"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_minus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="-"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="1"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="2"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="3"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_plus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="+"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_pi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="π"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

                <Button
                    android:id="@+id/button_zero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="0"
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_dot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="."
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>
                <Button
                    android:id="@+id/button_equal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="="
                    android:textSize="15sp"
                    android:backgroundTint="@color/lightblack"
                    android:textColor="@color/orange"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>